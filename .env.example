# Variables de entorno para la aplicación
# Copia este archivo a .env y configura tus valores

# Base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=inquieta_dulzura

# Servidor
PORT=3000
NODE_ENV=development

# URLs
API_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# Almacenamiento de fotos
UPLOAD_DIR=./uploads/productos
UPLOAD_URL=http://localhost:3000/uploads/productos
MAX_FILE_SIZE_MB=5

# JWT Authentication
JWT_SECRET=change-this-secret-in-production-use-long-random-string
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_DAYS=7

# Cloudinary (opcional - para producción)
# CLOUDINARY_CLOUD_NAME=tu-cloud-name
# CLOUDINARY_API_KEY=tu-api-key
# CLOUDINARY_API_SECRET=tu-api-secret
